pipeline {
    agent {
	docker { image 'jenkins-infrastructure-agent:latest' }
	}
    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/nivav1/Project_1.git'
            }
        }
        stage('Build Infrastructure and Configuration') {
            steps {
                script {
                    sh 'terraform init'
		    sh 'terraform validate'
                    sh 'terraform apply --auto-approve'
                    sh '. ./machine_ip.sh'
                    sh 'ansible-playbook -vv -i ./ansible/host.ini ./ansible/installdocker.yml'
                }
            }
        }
    }
}
